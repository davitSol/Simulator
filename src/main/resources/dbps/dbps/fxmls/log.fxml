<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dbps.dbps.controller.LogController">
    <Pane prefHeight="30.0" prefWidth="590.0" style="-fx-background-color: yellow">
        <Label layoutX="8.0" prefHeight="23.0" prefWidth="590.0" text="로그" />
      <Button fx:id="clearBtn" layoutX="542.0" layoutY="-1.0" mnemonicParsing="false" onMouseClicked="#clearBtnClicked" onMouseEntered="#clearBtnEntered" onMouseExited="#clearBtnExited" style="-fx-background-color: yellow;">
          <graphic>
              <ImageView fx:id="trashCanImage" fitHeight="23.0" fitWidth="23" />
          </graphic>
      </Button>
    </Pane>
    <ScrollPane fx:id="scrollPane" style="-fx-background-color: transparent;"  prefHeight="130.0" prefWidth="590.0">
        <TextFlow fx:id="logArea" prefHeight="125.0" prefWidth="585.0" style="color: #fff; -fx-background-color: #2B2D30;">
            <Text fill="white" text="로그 나오는 곳" />
            <Text fill="#E88F89" text="경고 로그 나오는 곳" />
            <Text fill="#E88F89" text="주의 로그 나오는 곳" />
        </TextFlow>
    </ScrollPane>
</VBox>
